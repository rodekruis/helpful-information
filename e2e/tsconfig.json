{
  "$schema": "https://www.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2023"],
    "module": "nodenext",
    "moduleResolution": "node16",
    "noEmit": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "target": "es2022"
  },
  "include": ["**/*.mjs"]
}
