{
  "$schema": "https://json.schemastore.org/staticwebapp.config.json",
  "routes": [
    {
      "route": "/*.js",
      "headers": {
        "Cache-Control": "immutable, no-transform, max-age=31536000"
      }
    },
    {
      "route": "/*.css",
      "headers": {
        "Cache-Control": "immutable, no-transform, max-age=31536000"
      }
    },
    {
      "route": "/assets/*",
      "headers": {
        "Cache-Control": "must-revalidate, no-transform, max-age=2592000"
      }
    },
    {
      "route": "/data/*",
      "allowedRoles": ["authenticated", "aidworker"],
      "headers": {
        "Content-Type": "application/json;charset=utf-8"
      }
    },
    {
      "route": "/private*",
      "allowedRoles": ["authenticated", "aidworker"]
    },
    {
      "route": "/login",
      "redirect": "/.auth/login/aad"
    },
    {
      "route": "/.auth/login/twitter",
      "statusCode": 404
    },
    {
      "route": "/.auth/login/github",
      "statusCode": 404
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout"
    }
  ],
  "trailingSlash": "auto",
  "navigationFallback": {
    "rewrite": "index.html",
    "exclude": ["/assets/*", "/data/*"]
  },
  "responseOverrides": {
    "404": {
      "redirect": "/"
    }
  },
  "globalHeaders": {
    "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-inline' https://sheets.googleapis.com https://*.in.applicationinsights.azure.com; style-src 'self' 'unsafe-inline'; img-src * 'self' data:; font-src 'self' data:; connect-src * 'self'; media-src * 'self'; object-src 'none'; frame-src 'none'; form-action 'none'; manifest-src 'self'"
  }
}
